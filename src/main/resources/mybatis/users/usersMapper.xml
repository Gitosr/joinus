<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.joinus.dao.UsersDAO">
	<select id="getMemberFindByEmail" parameterType="String" resultType="UsersDTO">
		SELECT * FROM users
		WHERE users_email = #{users_email}
	</select>
	
	<select id="getMemberFindById" parameterType="String" resultType="UsersDTO">
		SELECT * FROM users
		WHERE users_id = #{users_id}
	</select>
	
	<insert id="insertOne" parameterType="UsersDTO">
		INSERT INTO users
		VALUES (#{users_id}, #{users_pwd}, #{users_name}, #{users_phone}, #{users_email}, #{users_nick}, now(), #{users_addrs}, 0, 0, 0, null, 'USER', #{users_zipcode})
	</insert>
	
	<select id="isExistId" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM users
		WHERE users_id = #{users_id}
	</select>
	
	<insert id="insertEmailOnly" parameterType="UsersDTO">
		INSERT INTO users (users_email)
		VALUES (#{users_email})
	</insert>

</mapper>